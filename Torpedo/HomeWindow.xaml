<Window x:Class="NationalInstruments.Torpedo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="onePlayerModeButton" Content="Egy játékos" HorizontalAlignment="Center"  Margin="0,150,0,0" Width="64" Height="25" VerticalAlignment="Top" Click="onePlayerModeButton_Click"/>
        <Button Name="twoPlayerModeButton" Content="Két játékos" HorizontalAlignment="Center"  Margin="0,200,0,0" Width="64" Height="25" VerticalAlignment="Top" Click="twoPlayerModeButton_Click"/>
        <Label Content="Torpedó" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Button Name="exitButton" Content="Kilépés" HorizontalAlignment="Center" Margin="0,260,0,0" VerticalAlignment="Top" Click="exitButton_Click"/>

    </Grid>
</Window>
