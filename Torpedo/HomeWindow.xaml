<Window x:Class="NationalInstruments.Torpedo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Torpedó" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Button Name="onePlayerModeButton" Content="Egy játékos" HorizontalAlignment="Center"  Margin="0,150,0,0" Width="120" Height="25" VerticalAlignment="Top" Click="OnePlayerModeButton_Click"/>
        <Button Name="twoPlayerModeButton" Content="Két játékos" HorizontalAlignment="Center"  Margin="0,200,0,0" Width="120" Height="25" VerticalAlignment="Top" Click="TwoPlayerModeButton_Click"/>
        <Button Name="resultsButton" Content="Korábbi eredmények" HorizontalAlignment="Center"  Margin="0,250,0,0" Width="120" Height="25" VerticalAlignment="Top" Click="ResultButton_Click"/>
        <Button Name="exitButton" Content="Kilépés" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Click="ExitButton_Click"/>

    </Grid>
</Window>
